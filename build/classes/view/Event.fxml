<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="1049.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EventController">
    <children>
        <!-- Sidebar -->
        <Pane prefHeight="600.0" prefWidth="150.0" style="-fx-background-color: #696969;">
            <children>
                <!-- Logo -->
                <ImageView fitHeight="190.0" fitWidth="208.0" layoutX="-20.0" layoutY="-10.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Logo.png" />
                    </image>
                </ImageView>

                <!-- Sidebar Buttons -->
                <Button fx:id="goToDashboard" layoutX="15.0" layoutY="145.0" mnemonicParsing="false" onAction="#goToDashboard"  prefHeight="35.0" prefWidth="120.0" text="Dashboard" />
                <Button fx:id="goToClient" layoutX="15.0" layoutY="198.0" mnemonicParsing="false" onAction="#goToClient" prefHeight="35.0" prefWidth="120.0" text="Client" />
                <Button fx:id="goToEvent" layoutX="15.0" layoutY="252.0" mnemonicParsing="false" onAction="#goToEvent"  prefHeight="35.0" prefWidth="120.0" text="Event" />
                <Button fx:id="goToSchedule" layoutX="15.0" layoutY="307.0" mnemonicParsing="false" onAction="#goToSchedule"  prefHeight="35.0" prefWidth="120.0" text="Schedule" />
            </children>
        </Pane>

        <!-- Main Content -->
        <AnchorPane layoutX="150.0" layoutY="0.0" prefHeight="600.0" prefWidth="650.0">
            <children>
                <!-- Header -->
                <Label layoutX="20.0" layoutY="20.0" prefHeight="56.0" prefWidth="197.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Event Management">
               <font>
                  <Font size="32.0" />
               </font></Label>

                <!-- Add Client Button -->
                <Button fx:id="btnAddEventTop" layoutX="678.0" layoutY="58.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="140.0" text="Tambah Events" />

                <!-- Events Table -->
                <TableView fx:id="clientTable" layoutX="20.0" layoutY="108.0" prefHeight="442.0" prefWidth="851.0">
                    <columns>
                        <TableColumn fx:id="numberColumn" prefWidth="48.0" text="No." />
                        <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Nama Event" />
                        <TableColumn fx:id="descriptionColumn" prefWidth="150.0" text="Deskripsi" />
                        <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Kategori" />
                        <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Tanggal" />
                        <TableColumn fx:id="locationColumn" prefWidth="150.0" text="Lokasi" />
                        <TableColumn fx:id="clientNameColumn" prefWidth="150.0" text="Nama Client" />
                    </columns>
                </TableView>

                <!-- Add Client Popup -->
                <AnchorPane fx:id="addClientPopup" layoutX="125.0" layoutY="100.0" prefHeight="350.0" prefWidth="400.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 2;" visible="false">
                    <children>
                        <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Tambah Client" />
                        <TextField fx:id="nameField" layoutX="20.0" layoutY="50.0" prefWidth="360.0" promptText="Nama Client" />
                        <TextField fx:id="contactField" layoutX="20.0" layoutY="100.0" prefWidth="360.0" promptText="Kontak" />
                        <TextField fx:id="addressField" layoutX="20.0" layoutY="150.0" prefWidth="360.0" promptText="Alamat" />
                        <Button fx:id="btnSaveClient" layoutX="120.0" layoutY="300.0" text="Simpan" />
                        <Button fx:id="btnCancelClient" layoutX="200.0" layoutY="300.0" text="Batal" />
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>

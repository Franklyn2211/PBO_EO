<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
        <!-- Sidebar -->
        <Pane prefHeight="600.0" prefWidth="150.0" style="-fx-background-color: #696969;">
            <children>
                <!-- Logo -->
                <ImageView fitHeight="190.0" fitWidth="208.0" layoutX="-20.0" layoutY="-10.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Logo.png" />
                    </image>
                </ImageView>

                <!-- Sidebar Buttons -->
                <Button fx:id="btnDashboard" layoutX="15.0" layoutY="145.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" text="Dashboard" />
                <Button fx:id="btnClient" layoutX="15.0" layoutY="198.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" text="Client" />
                <Button fx:id="btnEvent" layoutX="15.0" layoutY="252.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" text="Event" />
                <Button fx:id="btnSchedule" layoutX="15.0" layoutY="307.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" text="Schedule" />
                <Button fx:id="btnLogout" layoutX="15.0" layoutY="520.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" text="Log Out" />
            </children>
        </Pane>

       <!-- Header -->
       <Text layoutX="170.0" layoutY="50.0" text="Dashboard">
           <font>
               <Font size="24.0" />
           </font>
       </Text>

       <!-- Search Field -->
       <TextField fx:id="searchField" layoutX="214.0" layoutY="40.0" prefHeight="35.0" prefWidth="458.0" promptText="Cari Data..." />
       <ImageView fitHeight="35.0" fitWidth="35.0" layoutX="170.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
           <image>
               <Image url="@../resources/cari.png" />
           </image>
       </ImageView>

       <!-- User Label -->
       <Label layoutX="694.0" layoutY="40.0" text="Username">
           <font>
               <Font name="Baskerville Old Face" size="18.0" />
           </font>
       </Label>

       <!-- Popup Form Tambah Client -->
       <AnchorPane fx:id="addClientPopup" layoutX="200.0" layoutY="100.0" prefHeight="350.0" prefWidth="400.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 2;" visible="false">
           <children>
               <TextField fx:id="nameField" layoutX="20.0" layoutY="20.0" prefWidth="360.0" promptText="Nama Client" />
               <TextField fx:id="contactField" layoutX="20.0" layoutY="60.0" prefWidth="360.0" promptText="Kontak" />
               <TextField fx:id="addressField" layoutX="20.0" layoutY="100.0" prefWidth="360.0" promptText="Alamat" />
               <Button fx:id="btnSaveClient" layoutX="100.0" layoutY="250.0" prefWidth="80.0" text="Simpan" />
               <Button fx:id="btnCancelClient" layoutX="200.0" layoutY="250.0" prefWidth="80.0" text="Batal" />
           </children>
       </AnchorPane>

       <!-- TitledPane Summary -->
       <TitledPane animated="false" layoutX="187.0" layoutY="151.0" text="Total User">
           <content>
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="96.0" prefWidth="160.0" />
           </content>
       </TitledPane>
       <TitledPane animated="false" layoutX="400.0" layoutY="151.0" text="Total Client">
           <content>
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="96.0" prefWidth="160.0" />
           </content>
       </TitledPane>
       <TitledPane animated="false" layoutX="613.0" layoutY="151.0" text="Total Events">
           <content>
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="96.0" prefWidth="160.0" />
           </content>
       </TitledPane>

       <!-- PieChart -->
       <PieChart fx:id="eventPieChart" layoutX="250.0" layoutY="300.0" prefHeight="250.0" prefWidth="400.0" title="Persentase Events" />

       <!-- TableView -->
       <TableView fx:id="tableView" layoutX="169.0" layoutY="100.0" prefHeight="300.0" prefWidth="500.0">
           <columns>
               <TableColumn fx:id="nameColumn" text="Nama" />
           </columns>
       </TableView>

   </children>
</AnchorPane>
